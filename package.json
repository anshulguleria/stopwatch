{
  "name": "stopwatch",
  "version": "0.0.1",
  "description": "A stopwatch app in javascript.",
  "main": "stopwatch.js",
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "sourceMapRelative": "$PWD/src/js",
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "scripts": {
    "clean": "rimraf build && mkdir build && mkdir build/js",
    "postinstall": "npm run clean",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:js": "browserify src/js/index.js --outfile build/js/index.js"
  },
  "keywords": [
    "stopwatch"
  ],
  "author": "Anshul Guleria <anshulguleria@ymail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anshulguleria/stopwatch.git"
  },
  "bugs": {
    "url": "https://github.com/anshulguleria/stopwatch/issues"
  },
  "homepage": "https://github.com/anshulguleria/stopwatch#readme",
  "devDependencies": {
    "babel-preset-es2015": "^6.0.12",
    "babelify": "^7.0.2",
    "browserify": "^12.0.1",
    "rimraf": "^2.4.3"
  }
}
